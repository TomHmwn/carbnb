<div class="container-sm">
  <div class="text-center p-4">
    <h1>Your Bookings: </h1>
  </div>

  <div class="d-flex flex-column">
    <% @bookings.each do |booking|%>
      <%= render "components/bookingcard", car:booking.car, booking:booking%>
      <div class="d-flex justify-content-end">
      <%= link_to "Edit Booking", edit_booking_path(booking), class:"btn btn-warning my-3" %>
      <%= link_to "Delete This Booking", booking_path(booking),  data: {turbo_method: :delete, turbo_confirm: "Delete this booking?"}, class:"btn btn-danger my-3"%>
      </div>
    <% end %>
  </div>
</div>
