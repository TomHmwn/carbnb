<div class="text-center p-20px mb-5">
  <%=render "shared/banner"%>
</div>
<div id="map-cars-layout" class="">
  <div id="cars-container" class="container d-flex flex-wrap justify-content-center align-items-center" style="overflow: scroll; max-height: 100vh;">
      <% @cars.each do |car|%>
        <%= render "components/card", car:car%>
      <% end %>
  </div>
  <div id="map-container"class="w-100 h-100 px-5">
    <div class="rounded-4 mt-3"style="width: 100%; height: 900px;"
        data-controller="map"
        data-map-markers-value="<%= @markers.to_json %>"
        data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>
</div>
