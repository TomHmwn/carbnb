<h2 class="p-3 text-center">Here are all your cars:</h2>
<div class="container-md d-flex flex-wrap justify-content-center">
  <% @cars.each do |car| %>
    <div id="your-car"class="card border border-white rounded-5 m-2" style="width: 500px">
      <%= link_to car_path(car), class:"text-decoration-none" do %>
        <div class="card-img-top">
          <%= cl_image_tag car.photos[0].key,width:"500", crop: :fit, class:"object-fit-cover" %>
        </div>
        <div class="card-body">
          <div class="fs-2 text-light fw-semibold"><%= "#{car.brand} #{car.model}"%></div>
          <div class="text-info mb-4 d-inline"><%= "#{car.transmission}" %></div>
          <div class="text-info ms-2 mb-4 d-inline"><%= "#{car.kilometrage}km" %></div>
          <div class="d-flex flex-wrap">
            <div class="text-light d-inline p-2 m-1 border border-white rounded-5"><%= "Door: #{car.doors}" %></div>
            <div class="text-light d-inline p-2 m-1 border border-white rounded-5"><%= "#{car.car_type}" %></div>
            <div class="text-light d-inline p-2 m-1 border border-white rounded-5"><%= "#{car.fuel_type}" %></div>
            <div class="text-light d-inline p-2 m-1 border border-white rounded-5"> <%= car.color %></div>
          </div>
          <div class="mt-4 d-flex flex-column">
            <div class="p-2 text-light"><%= "#{car.address}" %></div>
            <div class="p-2 text-light"><%= "#{car.year}" %></div>
            <div class="p-2 text-light align-self-end fs-3">$<%= car.price_per_day %> per day</div>
          </div>

        </div>
        <div class="card-footer d-flex justify-content-end">
          <%= link_to "Edit This Car", edit_car_path(car.id), class:"btn btn-warning"%>
          <%= link_to "Delete This Car", car_path(car.id),  data: {turbo_method: :delete, turbo_confirm: "Delete #{car.user.first_name}'s #{car.brand} #{car.model}?"}, class:"btn btn-danger"%>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
