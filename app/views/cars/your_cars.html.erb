<h2 class="pt-3">Here are all your cars:</h2>
<div class="container cards">
  <% @cars.each do |car| %>
    <%= link_to car_path(car) do %>
      <div class="card-product rounded-3">
        <% if car.photos[0].nil? %>
          <%= 'No image :(' %>
        <% else %>
          <%= cl_image_tag car.photos[0].key, height: 300, width: 400, crop: :fill %>
        <% end %>
        <div class="car-card-info">
          <div><%= car.brand %></div>
          <div><%= car.model %></div>
          <div><%= car.color %></div>
          <div>$<%= car.price_per_day %> per day</div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
