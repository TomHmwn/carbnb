<div id="<%= dom_id car %>">
  <%=link_to car_path(car), class:"card" do  %>
    <div>
      <%= car.color %>
    </div>
    <div>
      <%= car.model %>
    </div>
    <div>
      <%= car.brand%>
    </div>
    <div>
      <%= car.price_per_day%>
    </div>
    <div>
      <% if car.photos.attached? %>
        <%= cl_image_tag car.photos.first.key, height: 300, width: 400, crop: :fill  %>
      <% else %>
        <img src="https://st4.depositphotos.com/14953852/22772/v/1600/depositphotos_227725120-stock-illustration-image-available-icon-flat-vector.jpg" alt="no image found", height= "300", width= "400">
      <% end %>
    </div>
    <div>
      <%= car.user.email%>
    </div>
  <% end %>
</div>
